.nav {
  display: flex;
  justify-content: space-around;
  border-bottom: 1px solid #2f2f2f;
}
.nav .nav-item {
  width: 30px;
  height: 30px;
  background-color: #39c5bb;
  margin: 15px 0;
  text-align: center;
  line-height: 30px;
}
.list-box {
  margin-top: 20px;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}
.list-box .list-item {
  margin: 20px;
}
.list-box .list-item image {
  width: 200rpx;
}

